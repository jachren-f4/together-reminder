# Supabase Configuration
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database URLs
DATABASE_URL=postgresql://postgres:[password]@xxx.supabase.co:5432/postgres
DATABASE_POOL_URL=postgresql://postgres:[password]@xxx.pooler.supabase.com:6543/postgres

# Monitoring (Optional)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Environment
NODE_ENV=development

# LP Daily Reset Configuration
# Hour (0-23 UTC) when LP grants reset. Default: 0 (midnight UTC)
# Example: LP_RESET_HOUR_UTC=7 resets at 7:00 UTC (midnight for UTC+7)
LP_RESET_HOUR_UTC=0

# Whether users can play more content after earning LP for the day
# true = unlimited play, just no more LP (default)
# false = block new content until reset
LP_ALLOW_UNLIMITED_CONTENT=true
